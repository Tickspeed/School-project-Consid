---

import Link from "./Link.astro";
const {navItems, buttonVariant = "navbar", variant = "inline"} = Astro.props
let buttonSize;

---

<nav id = "dropdown-navbar"class = "navbar hidden">
    
    
    <ul class = "">
        {navItems.map(item => (
            <li>
                <Link style = "width: 100%" variant = "primary" isBorder = {true} isFilled = {false} href = {item.href} text = {item.text}></Link>
            </li>
        ))}
    </ul>
    
</nav>

<style>
    
    .navbar{
        position: absolute;
        width: 100%;
        top: 20vh;

        background-color: var(--white);

        max-height: 500px;
        overflow: hidden;
        transition: all 0.5s ease-out;

        
    }
    ul{
        list-style: none;
        width: 100%;
        display: flex;
        flex-direction: column;

        padding: var(--padding-md) 0;
        

    }

    li{
        display: flex;
        justify-content: start;
    }
    .navbar.hidden{
    
    max-height: 0px;
    }


</style>